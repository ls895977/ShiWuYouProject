<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_120"
    android:layout_marginLeft="@dimen/dip_10"
    android:layout_marginTop="@dimen/dip_5"
    android:layout_marginRight="@dimen/dip_10"
    android:layout_marginBottom="@dimen/dip_5"
    android:background="@drawable/mybg"
    android:orientation="vertical"
    android:padding="@dimen/dip_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_naozhong"
            android:drawablePadding="@dimen/dip_10"
            android:gravity="center"
            android:text="系统消息"
            android:textColor="@color/myColor"
            android:textSize="@dimen/fond_16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018.08.06 21:15"
            android:textColor="#B8B8B8"
            android:textSize="@dimen/fond_12sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_1"
        android:layout_marginTop="@dimen/dip_10"
        android:background="#f0f0f0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dip_10"
        android:text="新年快到了，感谢大家对平台的支持，现在在拉老师到平台奖励300元一名"
        android:textColor="#777777"
        android:textSize="@dimen/fond_16sp" />
</LinearLayout>
