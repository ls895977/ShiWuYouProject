<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F2F4F7"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_65"
        android:background="@color/white">

        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dip_5"
            android:padding="@dimen/dip_10"
            android:src="@mipmap/icon_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dip_30"
            android:text="职称"
            android:textColor="@color/myColor"
            android:textSize="@dimen/dip_18"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/dip_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mybg1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlZhiCheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:text="选择职称"
                    android:textColor="#707070"
                    android:textSize="@dimen/fond_14sp" />

                <TextView
                    android:id="@+id/tvZcname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/icon_right"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:text="高级教师"
                    android:textColor="@color/myColor"
                    android:textSize="@dimen/fond_14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.1"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:background="#f0f0f0" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.1"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:background="#e0e0e0" />
            <RelativeLayout
                android:id="@+id/zhichengImg"
                android:layout_margin="@dimen/dip_20"
                android:layout_width="match_parent"
                android:background="@drawable/mybg2"
                android:layout_height="@dimen/dip_220">
                <ImageView
                    android:id="@+id/zcimg"
                    android:layout_width="match_parent"
                    android:src="@mipmap/icon_zhicheng"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/dip_20"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="上传教师职称证书"
                android:padding="@dimen/dip_10"
                android:textSize="@dimen/fond_14sp"
                android:textColor="@color/myColor"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/bt_sava"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dip_40"
            android:layout_marginRight="@dimen/dip_40"
            android:layout_marginBottom="@dimen/dip_10"
            android:background="@drawable/hom_bt_bg"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>
</LinearLayout>
