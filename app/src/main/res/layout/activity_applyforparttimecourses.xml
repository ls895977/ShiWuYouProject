<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myHeader"
        android:layout_width="match_parent"
        android:background="@color/color_445DFD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="@dimen/dip_160">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTitleBar"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="@dimen/dp_70">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="@dimen/dp_20"
                android:tint="@color/white"
                android:src="@drawable/picture_icon_back_arrow"
                android:layout_height="@dimen/dp_15"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="申请兼课"
                android:includeFontPadding="false"
                android:textSize="@dimen/fond_18sp"
                android:layout_marginBottom="@dimen/dp_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBut1"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/clTitleBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/dip_30"
                android:textStyle="bold"
                android:text="01"
               android:textColor="@color/color_445DFD"
                android:textSize="@dimen/fond_17sp"
                android:gravity="center"
                android:background="@drawable/shape_bg30ffffff__ffffff"
                android:layout_height="@dimen/dip_30"/>
            <TextView
                android:id="@+id/ttv1"
                android:layout_marginTop="@dimen/dip_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:text="申请面试"
                android:textColor="@drawable/apply_fond_selecte"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/view1"
            android:layout_marginTop="@dimen/dip_13"
            app:layout_constraintTop_toTopOf="@+id/clBut1"
            app:layout_constraintLeft_toRightOf="@+id/clBut1"
            android:layout_width="@dimen/dp_34"
            android:background="@mipmap/icon_rightjiantou"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBut2"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/clTitleBar"
            app:layout_constraintLeft_toRightOf="@+id/view1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/dip_30"
                android:textStyle="bold"
                android:text="02"
                android:textColor="@color/color_445DFD"
                android:textSize="@dimen/fond_17sp"
                android:gravity="center"
                android:background="@drawable/shape_bg30ffffff__ffffff"
                android:layout_height="@dimen/dip_30"/>
            <TextView
                android:id="@+id/ttv2"
                android:layout_marginTop="@dimen/dip_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv2"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:text="开课审核"
                android:textColor="@drawable/apply_fond_selecte"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/view2"
            android:layout_marginTop="@dimen/dip_13"
            app:layout_constraintTop_toTopOf="@+id/clBut2"
            app:layout_constraintLeft_toRightOf="@+id/clBut2"
            android:layout_width="@dimen/dp_34"
            android:background="@mipmap/icon_rightjiantou"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBut3"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/clTitleBar"
            app:layout_constraintLeft_toRightOf="@+id/view2"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/dip_30"
                android:textStyle="bold"
                android:text="03"
                android:textColor="@color/color_445DFD"
                android:textSize="@dimen/fond_17sp"
                android:gravity="center"
                android:background="@drawable/shape_bg30ffffff__ffffff"
                android:layout_height="@dimen/dip_30"/>
            <TextView
                android:id="@+id/ttv3"
                android:layout_marginTop="@dimen/dip_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv3"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:text="签订合同"
                android:textColor="@drawable/apply_fond_selecte"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/view3"
            android:layout_marginTop="@dimen/dip_13"
            app:layout_constraintTop_toTopOf="@+id/clBut3"
            app:layout_constraintLeft_toRightOf="@+id/clBut3"
            android:layout_width="@dimen/dp_34"
            android:background="@mipmap/icon_rightjiantou"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBut4"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/clTitleBar"
            app:layout_constraintLeft_toRightOf="@+id/view3"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/dip_30"
                android:textStyle="bold"
                android:text="04"
                android:textColor="@color/color_445DFD"
                android:textSize="@dimen/fond_17sp"
                android:gravity="center"
                android:background="@drawable/shape_bg30ffffff__ffffff"
                android:layout_height="@dimen/dip_30"/>
            <TextView
                android:id="@+id/ttv4"
                android:layout_marginTop="@dimen/dip_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv4"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:text="开课成功"
                android:textColor="@drawable/apply_fond_selecte"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/myFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"/>
</androidx.constraintlayout.widget.ConstraintLayout>