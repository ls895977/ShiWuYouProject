<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_250">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_200"
            android:background="#445DFD" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dip_60"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/dip_65"
                android:layout_height="@dimen/dip_65"
                app:riv_corner_radius="@dimen/dip_30"
                android:src="@mipmap/iocn_moren" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="BOB"
                android:textColor="@color/white"
                android:textSize="@dimen/fond_18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_80"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:background="@drawable/mybg">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_gongzuotai"
                    android:drawablePadding="@dimen/dip_5"
                    android:gravity="center"
                    android:text="工作台"
                    android:textColor="@color/myColor"
                    android:textSize="@dimen/fond_16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_zan"
                    android:drawablePadding="@dimen/dip_5"
                    android:gravity="center"
                    android:text="推荐有奖"
                    android:textColor="@color/myColor"
                    android:textSize="@dimen/fond_16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dip_10"
        android:layout_marginTop="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_10"
        android:background="@drawable/mybg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bt_TeacherInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_gerenziliao"
            android:drawableRight="@mipmap/icon_right"
            android:drawablePadding="@dimen/dip_10"
            android:paddingLeft="@dimen/dip_15"
            android:paddingTop="@dimen/dip_20"
            android:paddingRight="@dimen/dip_15"
            android:paddingBottom="@dimen/dip_15"
            android:text="个人资料"
            android:textColor="@color/myColor"
            android:textSize="@dimen/fond_14sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_0.1"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:background="#f0f0f0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_renzhengzhongxin"
            android:drawableRight="@mipmap/icon_right"
            android:drawablePadding="@dimen/dip_10"
            android:paddingLeft="@dimen/dip_15"
            android:paddingTop="@dimen/dip_20"
            android:paddingRight="@dimen/dip_15"
            android:paddingBottom="@dimen/dip_20"
            android:text="认证中心"
            android:textColor="@color/myColor"
            android:textSize="@dimen/fond_14sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_0.1"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:background="#f0f0f0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_lianxikehu"
            android:drawableRight="@mipmap/icon_right"
            android:drawablePadding="@dimen/dip_10"
            android:paddingLeft="@dimen/dip_15"
            android:paddingTop="@dimen/dip_20"
            android:paddingRight="@dimen/dip_15"
            android:paddingBottom="@dimen/dip_20"
            android:text="联系客服"
            android:textColor="@color/myColor"
            android:textSize="@dimen/fond_14sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_0.1"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:background="#f0f0f0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_guanyu"
            android:drawableRight="@mipmap/icon_right"
            android:drawablePadding="@dimen/dip_10"
            android:paddingLeft="@dimen/dip_15"
            android:paddingTop="@dimen/dip_20"
            android:paddingRight="@dimen/dip_15"
            android:paddingBottom="@dimen/dip_20"
            android:text="关于我们"
            android:textColor="@color/myColor"
            android:textSize="@dimen/fond_14sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_0.1"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:background="#f0f0f0" />

        <TextView
            android:id="@+id/bt_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_shezhi"
            android:drawableRight="@mipmap/icon_right"
            android:drawablePadding="@dimen/dip_10"
            android:paddingLeft="@dimen/dip_15"
            android:paddingTop="@dimen/dip_20"
            android:paddingRight="@dimen/dip_15"
            android:paddingBottom="@dimen/dip_20"
            android:text="设置"
            android:textColor="@color/myColor"
            android:textSize="@dimen/fond_14sp" />
    </LinearLayout>
</LinearLayout>
