<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:background="#F2F4F7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clItem1"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dip_8"
        android:background="@drawable/shape_ffffff_r10_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/dip_8"
        android:layout_height="@dimen/dp_180">
       <TextView
           android:id="@+id/tvRealNameAuthentication"
           android:layout_width="match_parent"
           android:text="实名认证"
           android:paddingLeft="@dimen/sp_16"
           android:textSize="@dimen/dp_16"
           android:gravity="center_vertical"
           android:textColor="@color/color_707070"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_height="@dimen/dip_59"/>
        <View
            android:id="@+id/view1"
            android:layout_marginHorizontal="@dimen/dip_8"
            app:layout_constraintTop_toBottomOf="@+id/tvRealNameAuthentication"
            android:layout_width="match_parent"
            android:background="#F2F4F7"
            android:layout_height="@dimen/dp_1"/>
        <TextView
            android:id="@+id/tvNatureOfWork"
            android:layout_width="match_parent"
            android:text="工作性质"
            android:paddingStart="@dimen/sp_16"
            android:textSize="@dimen/dp_16"
            android:gravity="center_vertical"
            android:textColor="@color/color_707070"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="@dimen/dip_59"/>
        <View
            android:id="@+id/view2"
            android:layout_marginHorizontal="@dimen/dip_8"
            app:layout_constraintTop_toBottomOf="@+id/tvNatureOfWork"
            android:layout_width="match_parent"
            android:background="#F2F4F7"
            android:layout_height="@dimen/dp_1"/>
        <TextView
            android:id="@+id/tvWorkingCondition"
            android:layout_width="match_parent"
            android:text="工作状态"
            android:paddingStart="@dimen/sp_16"
            android:textSize="@dimen/dp_16"
            android:gravity="center_vertical"
            android:textColor="@color/color_707070"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="@dimen/dip_59"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/btApplyForAnInTerView"
        android:layout_marginTop="@dimen/sp_23"
        app:layout_constraintTop_toBottomOf="@+id/clItem1"
        android:layout_marginHorizontal="@dimen/dp_44"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:text="申请面试"
        android:gravity="center"
        android:textSize="@dimen/fond_16sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_445dfd_r4_bg"
        android:layout_height="@dimen/dp_40"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>