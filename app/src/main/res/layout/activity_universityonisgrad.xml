<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F2F4F7"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_65"
        android:background="@color/white">

        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dip_5"
            android:padding="@dimen/dip_10"
            android:src="@mipmap/icon_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dip_30"
            android:text="毕业院校"
            android:textColor="@color/myColor"
            android:textSize="@dimen/dip_18"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="@dimen/dp_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:background="@drawable/mybg1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:text="学校名称"
                    android:textColor="#707070"
                    android:textSize="@dimen/fond_14sp" />

                <EditText
                    android:id="@+id/etEduschool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip_150"
                    android:background="@null"
                    android:drawablePadding="@dimen/dip_10"
                    android:gravity="right"
                    android:hint="请输入学校名称"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:textColorHint="#DBDBDB"
                    android:textSize="@dimen/fond_14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.1"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:background="#e0e0e0" />

            <RelativeLayout
                android:id="@+id/startTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:text="开始时间"
                    android:textColor="#707070"
                    android:textSize="@dimen/fond_14sp" />

                <TextView
                    android:id="@+id/edustart_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/icon_right"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:hint="选择时间"
                    android:textColorHint="#DBDBDB"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/fond_14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.1"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:background="#e0e0e0" />
            <RelativeLayout
                android:id="@+id/endTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:text="结束时间"
                    android:textColor="#707070"
                    android:textSize="@dimen/fond_14sp" />

                <TextView
                    android:id="@+id/eduend_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/icon_right"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:hint="选择时间"
                    android:textColorHint="#DBDBDB"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/fond_14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.1"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:background="#e0e0e0" />
            <RelativeLayout
                android:id="@+id/rldegree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:text="学历"
                    android:textColor="#707070"
                    android:textSize="@dimen/fond_14sp" />

                <TextView
                    android:id="@+id/tvdegree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/icon_right"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:text="请选择学历"
                    android:textColor="#DBDBDB"
                    android:textSize="@dimen/fond_14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.1"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:background="#e0e0e0" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:text="专业"
                    android:textColor="#707070"
                    android:textSize="@dimen/fond_14sp" />

                <EditText
                    android:id="@+id/etmajor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip_150"
                    android:background="@null"
                    android:drawablePadding="@dimen/dip_10"
                    android:gravity="right"
                    android:hint="请输入你的专业名称"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:textColorHint="#DBDBDB"
                    android:textSize="@dimen/fond_14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.1"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:background="#e0e0e0" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:text="毕业证书"
                    android:textColor="#707070"
                    android:textSize="@dimen/fond_14sp" />

                <EditText
                    android:id="@+id/eduno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip_150"
                    android:background="@null"
                    android:drawablePadding="@dimen/dip_10"
                    android:gravity="right"
                    android:hint="请输入毕业证书编号"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:textColorHint="#DBDBDB"
                    android:textSize="@dimen/fond_14sp" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clUploadTheFrontOfIDCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_210"
                android:layout_marginHorizontal="@dimen/dip_25"
                android:layout_marginTop="@dimen/sp_14"
                android:background="@drawable/shape_5580fe_r10_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUploadTheFrontOfIDCard">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ivEduimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/graduation_pic_diploma"
                    app:riv_corner_radius="@dimen/dp_10"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:gravity="center"
                android:padding="@dimen/dip_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击图片上传毕业证书照片"
                android:textColor="#707070"
                android:textSize="@dimen/fond_14sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.1"
                android:layout_marginLeft="@dimen/dip_10"
                android:layout_marginRight="@dimen/dip_10"
                android:background="#e0e0e0" />
            <RelativeLayout
                android:layout_marginTop="@dimen/dip_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dip_10"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:text="学位证书"
                    android:textColor="#707070"
                    android:textSize="@dimen/fond_14sp" />

                <EditText
                    android:id="@+id/xwno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dip_150"
                    android:background="@null"
                    android:drawablePadding="@dimen/dip_10"
                    android:gravity="right"
                    android:hint="请输入学位书编号"
                    android:paddingLeft="@dimen/dip_15"
                    android:paddingTop="@dimen/dip_20"
                    android:paddingRight="@dimen/dip_15"
                    android:paddingBottom="@dimen/dip_15"
                    android:textColorHint="#DBDBDB"
                    android:textSize="@dimen/fond_14sp" />
            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clUploadTheFrontOfIDCard1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_210"
                android:layout_marginHorizontal="@dimen/dip_25"
                android:layout_marginTop="@dimen/sp_14"
                android:background="@drawable/shape_5580fe_r10_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUploadTheFrontOfIDCard">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/xwimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/graduation_pic_degree"
                    app:riv_corner_radius="@dimen/dp_10"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:gravity="center"
                android:padding="@dimen/dip_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击图片上传学位证书照片"
                android:textColor="#707070"
                android:textSize="@dimen/fond_14sp" />
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <TextView
            android:id="@+id/bt_sava"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dip_40"
            android:layout_marginRight="@dimen/dip_40"
            android:layout_marginBottom="@dimen/dip_10"
            android:background="@drawable/hom_bt_bg"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/fond_16sp" />
    </RelativeLayout>
</LinearLayout>
