<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shiwuyouproject">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:name=".base.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/shiwuyou"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_config"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/app_Login"/>
        <activity android:name=".ui.RegisterActivity"
            android:label="@string/app_Register"
            android:windowSoftInputMode="stateHidden|adjustResize"
            />
        <activity android:name=".ui.MainActivity"
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.fragment.my.activity.SettingActivity"
            android:label="@string/app_Setting"
            />
        <activity android:name=".ui.fragment.my.activity.TeacherInformationActivity"
            android:label="@string/app_TeacherInformation"
            />
        <activity android:name=".ui.fragment.my.activity.UniversityonisgradActivity"
            android:label="@string/app_Universityonisgrad"
            />
        <activity android:name=".ui.fragment.my.activity.TitleActivity"
            android:label="@string/app_Title"
            />
        <activity android:name=".ui.fragment.my.activity.RewardsAndHonorsActivity"
            android:label="@string/app_RewardsAndHonors"
            />
        <activity android:name=".ui.fragment.my.activity.TeachingExperienceActivity"
            android:label="@string/app_TeachingExperience"
            />
        <activity android:name=".ui.fragment.my.activity.SuccessfulCaseActivity"
            android:label="@string/app_SuccessfulCase"
            />
        <activity android:name=".ui.ApplyForPartTimeCoursesActivity"
            android:label="@string/app_ApplyForPartTimeCourses"
            />
        <activity android:name=".ui.my.RealNameAuthenticationActivity"
            android:label="@string/app_RealNameAuthentication"
            />
    </application>

</manifest>